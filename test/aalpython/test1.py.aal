aal "test1" {

    language: python;

    variables {
        i, dir
    }

    initial_state {
        i = 0
        dir = 0
    }

    action "iInc" {
        guard() {
            return dir == 0 and i < 5
        }
        model() {
        i += 1
        }
    }

    action "iDec" {
        guard() { return dir == 1 and i > 0 }
        model() { i -= 1 }
    }

    action "iChangeDirection" {
        guard() {
        x = i
        return i > 2 or x <= 0
        }
        model() {
            if dir == 0: dir = 1
            else:
                dir = 0 }
    }

    action "iDefaults" {
    }

    tag "SmallValue" {
        guard() { return i <= 2 }
    }

    tag "LargeValue" {
        guard() {  return i >= 4 }
    }

    tag "Growing" {guard(){return dir==0}}
}
